<h1 class="mb-5">Details</h1>

<div class="card">
  <p><span>Restaurant:</span><%= @restaurant.name%></p>
  <p><span>Address:</span> <%=@restaurant.address %></p>
  <p><span>Category:</span> <%=@restaurant.category %></p>
  <p><span>Phone Number:</span> <%=@restaurant.phone_number %></p>
  <p><span>Review</span></p>
      <ul>
      <% @restaurant.reviews.each do |review|%>
        <li><%= review.rating%>-<%= review.content%></li>
      <% end %>
    </ul>
</div>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class:"btn btn-primary" %>

<%= link_to "Return to main", restaurants_path, class:"btn btn-warning" %>

